name:                   HOC-cbits
version:                1.0
license:                BSD4
license-file:           LICENSE
cabal-version:          >= 1.2
build-type:             Custom
build-depends:          gnustep-config
extra-tmp-files:        HOC-cbits.buildinfo

Flag Trace
  default:              False
  description:          Print trace messages to console from low-level code

Library
  build-depends:        base >= 4,
                        libffi-experiments,
                        objc-ffi
  
  ghc-options:          -Wall
  hs-source-dirs:       src
  exposed-modules:      HOC.CBits
                        HOC.CBits.FFICallInterface
                        HOC.CBits.Marshalling
                        HOC.CBits.MemoryManagement
                        HOC.CBits.MsgSend
                        HOC.CBits.Statistics
                        HOC.CBits.Types
    
  c-sources:            cbits/FFICallInterface.m
                        cbits/Marshalling.m
                        cbits/MemoryManagement.m
                        cbits/Methods.m
                        cbits/Statistics.m
    
  extra-libraries:      objc, ffi
  
  if os(darwin)
    frameworks:         Foundation
    cpp-options:        -DMACOSX
    cc-options:         -DMACOSX
  else
    -- GNUstep paths are located and inserted by Setup.hs
    extra-libraries:    gnustep-base
    cpp-options:        -DGNUSTEP
    cc-options:         -DGNUSTEP
                        -fobjc-exceptions
                        -D_NATIVE_OBJC_EXCEPTIONS=1
  
  if flag(Trace)
    cpp-options:        -DDO_LOG=1
    cc-options:         -DDO_LOG=1
